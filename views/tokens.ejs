      <section>
    <h2>Tokens de Usuarios</h2>
    <ul>
        <% users.forEach(user => { %>
            <% console.log('Username:', user.username, 'Tokens:', user.tokens); %>
            <li>
                <%= user.username %>: <%= user.tokens %>
                <form method="post" action="/tokens/<%= user.id %>/addToken">
                    <button type="submit">Sumar Token</button>
                </form>
                <form method="post" action="/tokens/<%= user.id %>/removeToken">
                    <button type="submit" <%= user.tokens === 0 ? 'disabled' : '' %>>Restar Token</button>
                </form>
            </li>
        <% }); %>
    </ul>
</section>

