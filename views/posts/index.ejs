
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
      <nav>
      <div class="container">
          <ol class="breadcrumb-card">
          <li><a href="/">Menu</a> / Propuestas</li>
          </ol>
      </div>
      </nav>
  </div>
  <!-- End Breadcrumbs -->
  <div id="posts-section" class="posts-section">

    <div class="container" data-aos="fade-up">

      <div class="section-header">
        <h2>Equipos</h2>
        <p>Busca el equipo en el que mejor encajes</p>
      </div>

      <div class="actions-container">
        <div class="create-proposal">
        <% if(locals.loginUser?.isAdmin || locals.loginUser?.isAdminProposal) {%>
        <span><a href="/posts/new" class="animated-button-crearpost">Crear Propuesta</a></span>
        <% } %>
        </div>

        <!-- Filtro de propuestas -->
        <div class="filter-form">
            <!-- <div class="col-md-6"> -->
              <form method="GET" action="/posts/filter" class="form-inline">
                <select class="form-control mr-2" name="filter" id="filter">
                    <option value="" <%= filterType === '' ? 'selected' : '' %>>Todas</option>
                    <option value="not-started" <%= filterType === 'not-started' ? 'selected' : '' %>>Sin empezar</option>
                    <option value="in-progress" <%= filterType === 'in-progress' ? 'selected' : '' %>>En curso</option>
                    <option value="finished" <%= filterType === 'finished' ? 'selected' : '' %>>Finalizadas</option>
                    <option value="vetoed" <%= filterType === 'vetoed' ? 'selected' : '' %>>Vetadas</option>
                </select>
                <button type="submit" class="btn btn-primary">Filtrar</button>
              </form>
            <!-- </div> -->
        </div>
      </div>

        <div class="row">
          <% for (var i in posts) { %>
              <% var post = posts[i]; %>
              <!-- <article class="postShow"> -->
                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="<%= i*200 %>">
                  <div class="post-card">
                    <!-- <h3 class="postTitle"><%= post.title %></h3> -->
                    <div class="post-img">
                      <%- include('../attachments/_attachment', { post: post }) %>
                    </div>
                    <div class="meta">
                      <span class="post-date"><%= new Date(post.createdAt).toDateString() %></span>
                      <span class="post-author"> / <%= post.author?.username ?? "Anonymous" %></span>
                    </div>
                    <h3 class="post-title"><%= post.title %></h3>
                    <p><%= post.body %></p>
                    <a href="/posts/<%= post.id %>" class="btn"><span>Más información</span></a>
                    <!-- <div class="postOptions"> -->
                        <!-- <a class="button-2" href="/posts/<%= post.id %>">Show</a> -->
                        <% if(locals.loginUser?.id === post.authorId || locals.loginUser?.isAdmin || locals.loginUser?.isAdminProposal) {%>
                          <div class="edit-delete-buttons">
                            <a class="btn" href="/posts/<%= post.id %>/edit">Editar</a>
                            <a class="btn" href="/posts/<%= post.id %>?_method=DELETE" onClick="return confirm('Delete: <%= post.title %>');">Borrar</a>
                          </div>
                        <% } %>
                    </div>
                    <!-- <div>
                        <small id="author">By <b><%= post.author?.username ?? "Anonymous" %></b> </small>
                    </div> -->
                  </div>
              <!-- </article> -->
              <% if ((i+1) % 3 === 0) { %>
              </div>
              <div class="row">
            <% } %>
                <!-- </div> -->
          <% } %>
        </div>

        <!-- <div>
        <% if(locals.loginUser?.isAdmin || locals.loginUser?.isAdminProposal) {%>
        <a href="/posts/new">Create New Post</a>
        <% } %>
        </div> -->

          <!-- Registro de propuestas eliminadas -->
          <div class="deletedposts">
            <div class="section-header">
              <div class="header-content">
                <h2>Propuestas eliminadas</h2>
                <img src="/images/3D-icons/papelera-icon-1.PNG" alt="Papelera" class="deletedheader-image">
              </div>
                <p>Encuentra las propuestas que fueron eliminadas</p>
            </div>
            <div class="deletedposts-body">
              <% if (deletedPosts && deletedPosts.length > 0) { %>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Título</th>
                      <th scope="col">Eliminado por</th>
                      <th scope="col">Fecha de eliminación</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i in deletedPosts) { %>
                      <% var deletedPost = deletedPosts[i]; %>
                      <tr class="deleted-post <%= i >= 5 ? 'hidden' : '' %>">
                        <td><%= deletedPost.title %></td>
                        <td><%= deletedPost.deletedBy ?? "Anonymous" %></td>
                        <td><%= deletedPost.deletedAt?.toLocaleDateString() ?? "Unknown" %></td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
                <% if (deletedPosts.length > 5) { %>
                  <button id="showMore">Mostrar más</button>
                <% } %>
              <% } else { %>
                <p>No hay propuestas eliminadas.</p>
              <% } %>
            </div>
          </div>

      
      <!-- <div class="col-md-6"></div>
        <div>
          <a href="/posts/calculate-reputation" class="button-2">Calcular Reputación</a>
        </div>
        <div>
          <a href="/posts/apply-rewards" class="button-2">Aplicar Rewards de Votación</a>
        </div>
      </div> -->
    </div>
  </div>
