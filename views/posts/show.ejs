<script>
  document.addEventListener("DOMContentLoaded", function() {
    var progressBarContainers = document.querySelectorAll('.progress-bar-container');
    var totalVotes = 0;
    progressBarContainers.forEach(function(container) {
      var votes = parseInt(container.getAttribute('data-votes'));
      totalVotes += votes;
    });

    progressBarContainers.forEach(function(container) {
      var votes = parseInt(container.getAttribute('data-votes'));
      var progressBar = container.querySelector('.progress-bar');
      var percentage = (votes / totalVotes) * 100;
      progressBar.style.width = percentage + '%';
      progressBar.style.borderRadius = '0 5px 5px 0'; // add border radius to the right side of the progress bar
      progressBar.querySelector('.percentage').textContent = percentage.toFixed(2) + ' %';
    });

    const totalVoters = 25; // replace with your total number of voters
    const spectators = document.querySelector('.spectators');
    let abstentions = parseInt(spectators.getAttribute('data-abstentions'));
    abstentions = Math.min(abstentions, totalVoters); // limit the number of abstentions to the total number of voters
    const spectatorsIcons = document.getElementById('spectators-icons');

    for (let i = 0; i < totalVoters; i++) {
      const icon = document.createElement('span');
      icon.className = 'spectator-icon'; 
      icon.textContent = '👀'; // emoji de ojo
      if (i < abstentions) {
        icon.classList.add('active');
      }
      spectatorsIcons.appendChild(icon);
    }
  });
</script>