<section>
  <h2>Wallet y Tokens de Usuarios</h2>
  <div class="row">
    <div class="col-md-6">
      <h3>Wallet</h3>
      <ul>
        <% users.forEach(user => { %>
          <li>
            <%= user.username %>: <%= user.wallet %>
            <form method="post" action="/wallet/<%= user.userId %>/<%= user.teamId %>/addPointWallet">
              <input type="number" name="points" min="1" value="1">
              <button type="submit">Sumar Puntos</button>
            </form>
            <form method="post" action="/wallet/<%= user.userId %>/<%= user.teamId %>/removePointWallet">
              <input type="number" name="points" min="1" value="1">
              <button type="submit" <%= user.wallet === 0 ? 'disabled' : '' %>>Restar Puntos</button>
            </form>
          </li>
        <% }); %>
      </ul>
    </div>
    <div class="col-md-6">
      <h3>Tokens</h3>
      <ul>
        <% users.forEach(user => { %>
          <li>
            <%= user.username %>: <%= user.tokens %>
            <form method="post" action="/wallet/<%= user.userId %>/<%= user.teamId %>/addTokenToUser">
              <input type="number" name="tokens" min="1" max="10000" value="1">
              <button type="submit">Sumar Tokens</button>
            </form>
            <form method="post" action="/wallet/<%= user.userId %>/<%= user.teamId %>/removeTokenFromUser">
              <input type="number" name="tokens" min="1" max="10000" value="1">
              <button type="submit" <%= user.tokens === 0 ? 'disabled' : '' %>>Restar Tokens</button>
            </form>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
</section>

      
      



