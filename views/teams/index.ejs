  <h2>Teams:</h2>
  <% for (var i in teams) { %>
      <% var team = teams[i]; %>
      <article class="teamShow">
          <h3 class="teamTitle"><%= team.title %></h3>
          <%- include('../attachments/_attachmentTeams', { team: team }) %>
          <div class="teamOptions">
              <a class="button-2" href="/teams/<%= team.id %>">Show</a>
              <% if(locals.loginUser?.id === team.authorId || locals.loginUser?.isAdmin) {%>
              <a class="button-2" href="/teams/<%= team.id %>/edit">Edit</a>
              <% } %>
              <% if(locals.loginUser?.id === team.authorId || locals.loginUser?.isAdmin) {%>
              <a class="button-2" href="/teams/<%= team.id %>?_method=DELETE" onClick="return confirm('Delete: <%= team.title %>');">Delete</a>
              <% } %>
          </div>
          <div>
              <small id="author">By <b><%= team.author?.username ?? "Anonymous" %></b> </small>
          </div>
      </article>
  <% } %>
