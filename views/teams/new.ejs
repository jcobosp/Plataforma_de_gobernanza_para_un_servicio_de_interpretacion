<section>
    <h2>Add Team:</h2>
    <form method="post" action="/teams" enctype="multipart/form-data" >
        <div class="inputOption">
            <h3>Titulo del Team</h3>
            <input type="text" id="title" name="title" placeholder="Título del Team">
        </div>
        <div class="inputOption">
            <h3>Descripción del Team</h3>
            <textarea id="body" name="body" placeholder="Descripción del Team"></textarea>
        </div>
        <div class="inputOption">
            <input type="file" id="image" name="image">
        </div>
        <div class="inputOption">
            <label for="adminUser">Seleccionar admin:</label>
            <select id="adminUser" name="adminUser">
                <% for (var i in users) { %>
                    <% var user = users[i]; %>
                    <option value="<%= user.id %>"><%= user.username %></option>
                  <% } %>
            </select>
        </div>
        <input type="submit" name="enviar" id="enviar" value="Save">    
        <a href="/teams">Volver</a>
    </form>
</section>

  